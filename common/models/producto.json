{
  "name": "Producto",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "comprar": {
      "type": "boolean",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "limpiarLista"
    }
  ],
  "methods": {
    "limpiarLista": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "Objeto context",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "productos",
          "type": "array",
          "root": true,
          "description": "Devuelve un array con todos los productos de la lista familiar"
        }
      ],
      "description": "Pone a false el atributo comprar de todos los productos de la listaFamiliar asociada al usuario autenticado",
      "http": [
        {
          "path": "/limpiarLista",
          "verb": "put"
        }
      ]
    }
  }
}
