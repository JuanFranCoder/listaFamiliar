{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "solicitudes": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "owner": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "owner"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "miembroLista",
      "permission": "ALLOW",
      "property": "aceptarSolicitud"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "propietarioLista",
      "permission": "ALLOW",
      "property": "rechazarSolicitud"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitud": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "Objeto context",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "listaUsuarios",
          "type": "array",
          "root": true,
          "description": "Devuelve un array con todos los objetos usuario"
        }
      ],
      "description": "Aceptar la solicitud de un usuario",
      "http": [
        {
          "path": "/aceptarsolicitud",
          "verb": "put"
        }
      ]
    },
    "prototype.rechazarSolicitud": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "Objeto context",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "listaUsuarios",
          "type": "array",
          "root": true,
          "description": "Devuelve un array con todos los objetos usuario"
        }
      ],
      "description": "Un usuario que participa en una lista puede denegar el acceso a un usuario que lo haya solicitado",
      "http": [
        {
          "path": "/rechazarSolicitud",
          "verb": "delete"
        }
      ]
    }
  }
}
